{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store, must-revalidate" }]
      },
      {
        "source": "/access.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store, must-revalidate" }]
      },
      {
        "source": "**/*.{js,css,svg,png,jpg,webp,woff,woff2}",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      }
    ],

    /* IMPORTANT: explicit rewrites and NO cleanUrls to avoid /index â†’ / */
    "rewrites": [
      { "source": "/",        "destination": "/access.html" },
      { "source": "/index",   "destination": "/index.html"  },
      { "source": "/access",  "destination": "/access.html" }
    ]
  }
}
