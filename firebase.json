{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      {
        "source": "/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store, must-revalidate" }]
      },
      {
        "source": "/access.html",
        "headers": [{ "key": "Cache-Control", "value": "no-store, must-revalidate" }]
      },
      {
        "source": "**/*.{js,css,svg,png,jpg,webp,woff,woff2}",
        "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
      }
    ],
    "rewrites": [
      { "source": "/", "destination": "/access.html" }
    ],
    "redirects": []
  }
}
